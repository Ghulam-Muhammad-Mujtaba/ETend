@model ETend.Models.ViewModels.CompanyVM

<form method="post" asp-action="Upsert">
	<input asp-for="Company.Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Company.Id != 0 ? "Update" : "Create")  Company</h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3 col-10">
					<label asp-for="Company.AreaId"></label>
					<select asp-for="Company.AreaId" asp-items="@Model.AreaList" class="form-select">
						<option disabled selected>--Select Area--</option>
					</select>
					<span asp-validation-for="Company.AreaId" class="text-danger"></span>
				</div>
@*				<div class="mb-3 col-10">
					<label asp-for="House.Area.Type"></label>
					<input asp-for="House.Area.Type" class="form-control" />
					<span asp-validation-for="House.Area.Type" class="text-danger"></span>
				</div>*@
				<div class="mb-3 col-10">
					<label asp-for="Company.Name"></label>
					<input asp-for="Company.Name" class="form-control" />
					<span asp-validation-for="Company.Name" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="Company.Address"></label>
					<input asp-for="Company.Address" class="form-control" />
					<span asp-validation-for="Company.Address" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="Company.PhoneNumber"></label>
					<input asp-for="Company.PhoneNumber" class="form-control" />
					<span asp-validation-for="Company.PhoneNumber" class="text-danger"></span>
				</div>
				<div class="col-12">
					@if (Model.Company.Id != 0)
					{
						<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
					}
					else
					{
						<button type="submit" class="btn btn-primary" style="width:150px">Create</button>
					}
					<a asp-controller="Company" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Back to List
					</a>
				</div>

			</div>
		</div>
	</div>

</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}