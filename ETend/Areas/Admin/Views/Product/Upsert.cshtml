@model Product

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
	<input asp-for="Id" hidden />

	<div class="row">
		<div class="col-10">
			<div class="border p-3 mt-4 row">
				<div class="col-12 pb-2">
					<h2 class="text-primary">@(Model.Id != null ? "Update" : "Create")  Product</h2>
					<hr />
				</div>
				@*<div asp-validation-summary="All"></div>*@
				<div class="mb-3 col-10">
					<label asp-for="Title"></label>
					<input asp-for="Title" class="form-control" />
					<span asp-validation-for="Title" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="Description"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="Price"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="DiscountedPrice"></label>
					<input asp-for="DiscountedPrice" class="form-control" />
					<span asp-validation-for="DiscountedPrice" class="text-danger"></span>
				</div>
				<div class="mb-3 col-10">
					<label asp-for="ImageUrl"></label>
					<input type="file" id="uploadBox" name="file" class="form-control" />
				</div>
				<div class="col-12">
					@if (Model.Id > 0)
					{
						<button type="submit" class="btn btn-primary" style="width:150px">Update</button>
					}
					else
					{
						<button type="submit" class="btn btn-primary" onclick="return ValidateInput()"  style="width:150px">Create</button>
					}
					<a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
						Back to List
					</a>
				</div>

			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
		<script>
		function ValidateInput(){
			if(document.getElementById("uploadBox").value==""){
				Swal.fire({
				  icon: 'error',
				  title: 'Oops...',
				  text: 'Please upload an Image!',
				});
				return false;
			}
			return true;
		}
	</script>
}