@model IEnumerable<Vehicle>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vehicle List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Vehicle" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Vehicle
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Vehicle Name
                </th>
                <th>
                    Vehile No
                </th>
                <th>
                    Source
                </th>
                <th>
                    Destination
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.VehicleName
                    </td>
                    <td width="20%">
                        @obj.VehicleNo
                    </td>
                    <td width="20%">
                        @obj.Source
                    </td>
                    <td width="20%">
                        @obj.Destination
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Vehicle" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>